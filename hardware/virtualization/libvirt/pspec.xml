            <Patch level="1">tr.patch</Patch>
            <Patch level="1">fix-doc-dir.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>libvirt</Name>
        <RuntimeDependencies>
            <Dependency>qemu</Dependency>
            <Dependency>lvm2</Dependency>
            <Dependency>yajl</Dependency>
