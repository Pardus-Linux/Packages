        <License>as-is</License>
        <IsA>app:console</IsA>
        <Summary>PC/SC drivers for smart card readers</Summary>
        <Description>pcsc-lite is middleware to access a smart card using SCard API (PC/SC).</Description>
        <Archive sha1sum="6791a8bd07f69972f708d4bdd03d6b1056c7af3e" type="tarbz2">http://alioth.debian.org/frs/download.php/3082/pcsc-lite-1.5.5.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>hal-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">pcsc-lite-close_on_exec.patch</Patch>
            <Patch level="1">use-lpthread.patch</Patch>
            <Patch level="1">prefer-ccid-over-openct.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>pcsc-lite</Name>
        <RuntimeDependencies>
            <Dependency>hal</Dependency>
            <Dependency>hal-libs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/reader.conf.d</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <Provides>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>pcsc-lite-devel</Name>
        <Summary>Development files for pcsc-lite</Summary>
        <RuntimeDependencies>
            <Dependency release="12">pcsc-lite</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
    </Package>

