            <AdditionalFile target="src/mod_ctlextra.erl">fedora/mod_ctlextra.erl</AdditionalFile>
        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>erlang-suite</Dependency>
            <Dependency>erlang-devel</Dependency>
        </BuildDependencies>
        <Patches>
