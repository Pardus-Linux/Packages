            <Dependency>t1utils</Dependency>
            <Dependency>potrace</Dependency>
            <Dependency>autotrace</Dependency>
            <Dependency>fontforge-devel</Dependency>
            <Dependency>texlive-core</Dependency>
        </BuildDependencies>
    </Source>

