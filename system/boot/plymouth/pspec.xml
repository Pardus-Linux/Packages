        <IsA>app:console</IsA>
        <IsA>library</IsA>
        <Summary>Graphical Boot Animation and Logger</Summary>
        <Description>plymouth provides an attractive graphical boot animation in place of the text messages that normally get shown. Text messages are instead redirected to a log file for viewing after boot.</Description>
        <Archive sha1sum="c6da6307ccda377424ca12ff136beafc7cea8122" type="tarbz2">http://cekirdek.pardus.org.tr/~ozan/dist/sources/plymouth-0.8.3_20100929.tar.bz2</Archive>
        <AdditionalFiles>
            <AdditionalFile permission="0755" target="generate-flist">pardus/generate-flist.py</AdditionalFile>
        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>kernel-headers</Dependency>
            <Dependency>libdrm-devel</Dependency>
            <Dependency>libpng-devel</Dependency>
            <Dependency>cairo-devel</Dependency>
            <Dependency>pango-devel</Dependency>
            <Dependency>glib2-devel</Dependency>
            <Dependency>gtk2-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Pardus patches -->
            <Patch level="1">pardus/fix-fbdev-path.patch</Patch>
            <Patch level="1">pardus/disable-source-code-tracing.patch</Patch>
            <Patch level="1">pardus/fix-libpng-symbol.patch</Patch>
            <Patch level="1">pardus/adapt-theme-script.patch</Patch>

            <Patch level="1">mandriva/plymouth-0.8.3-retain-vt.patch</Patch>
            <!--<Patch level="1">mandriva/plymouth-0.8.3-details-not-available.patch</Patch>-->

            <!-- uClibc patches -->
            <Patch level="1">mandriva/plymouth-0.7.2-add-missing-header.patch</Patch>
            <Patch level="1">mandriva/plymouth-0.7.2-library-link-order.patch</Patch>
            <Patch level="1">mandriva/plymouth-0.7.2-less-greedy-usr_lib-substitution.patch</Patch>
            <Patch level="1">mandriva/plymouth-0.7.2-initrd-absolute-path.patch</Patch>
        </Patches>
    </Source>

