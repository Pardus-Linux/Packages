    <Package>
        <Name>zorg</Name>
        <Files>
            <Path fileType="config">/etc/X11/xorg.conf.d</Path>
            <Path fileType="data">/etc/modprobe.d</Path>
            <Path fileType="executable">/sbin</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share/X11</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/var/lib/zorg</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/X11/xorg.conf.d/00-keyboard.conf">00-keyboard.conf</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/X11/xorg-safe.conf">xorg-safe.conf</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="xorg.display.py">Xorg.Display</COMAR>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

