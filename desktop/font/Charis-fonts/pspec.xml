        <Files>
            <Path fileType="config">/etc/fonts</Path>
            <Path fileType="data">/usr/share/fonts</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/fonts/conf.avail/sil-charis-fonts-fontconfig.conf">sil-charis-fonts-fontconfig.conf</AdditionalFile>
