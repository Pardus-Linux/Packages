            <!-- Needed by kstars -->
            <Dependency>xplanet</Dependency>
            <Dependency>mesa-devel</Dependency>
            <Dependency>libspectre-devel</Dependency>
            <Dependency>avogadro-devel</Dependency>
            <Dependency>openbabel-devel</Dependency>
            <!-- needed by cantor -->
            <Dependency>R</Dependency>
            <Dependency>ocaml</Dependency>
            <Dependency>cfitsio-devel</Dependency>
