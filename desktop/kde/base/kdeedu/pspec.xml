        </Patches>
    </Source>
    <Package>
        <Name>kdeedu</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.0">qt</Dependency>
            <Dependency versionFrom="4.5.2">kdelibs</Dependency>
            <Dependency versionFrom="4.5.2">python-kde</Dependency>
            <Dependency versionFrom="4.4.2">phonon</Dependency>
            <Dependency>ocaml</Dependency>
            <Dependency>cfitsio</Dependency>
            <Dependency releaseFrom="2">facile</Dependency>
            <Dependency>openbabel</Dependency>
            <Dependency>avogadro</Dependency>
            <Dependency>libnova</Dependency>
            <Dependency>gsl</Dependency>
            <Dependency>libqalculate</Dependency>
            <Dependency>cln</Dependency>
            <Dependency>boost</Dependency>
            <Dependency>indilib</Dependency>
            <Dependency>xplanet</Dependency>
            <Dependency>libspectre</Dependency>
            <!-- cantor needs that-->
            <Dependency>R</Dependency>
            <Dependency>avogadro-libs</Dependency>
            <Dependency>libXrender</Dependency>
            <Dependency>libxslt</Dependency>
            <Dependency>mesa</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>kdeedu4</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share</Path>
        </Files>
    </Package>

    <Package>
        <Name>kdeedu-marble</Name>
        <Summary>A World Atlas</Summary>
        <Description>Marble is a free geographical map program.</Description>
        <RuntimeDependencies>
            <Dependency versionFrom="4.5.2">kdelibs</Dependency>
            <Dependency releaseFrom="2">gpsd</Dependency>
            <Dependency>qt</Dependency>
            <Dependency>qt-webkit</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package versionTo="4.2.4">kdeedu</Package>
        </Conflicts>
        <Files>
            <Path fileType="executable">/usr/bin/marble</Path>
            <Path fileType="executable">/usr/bin/geodatatest</Path>
            <Path fileType="data">/usr/share/kde4/apps/marble</Path>
            <Path fileType="data">/usr/share/kde4/apps/marble_part</Path>
            <Path fileType="data">/usr/share/applications/kde4/marble.desktop</Path>
            <Path fileType="data">/usr/share/config.kcfg/marble*</Path>
            <Path fileType="data">/usr/share/kde4/services/marble*</Path>
            <Path fileType="doc">/usr/share/doc/kde4/html/en/marble</Path>
            <Path fileType="library">/usr/lib/kde4/libmarble*</Path>
            <Path fileType="library">/usr/lib/libmarble*</Path>
            <Path fileType="library">/usr/lib/kde4/plugins/marble</Path>
            <Path fileType="data">/usr/share/icons/hicolor/*/*/marble*</Path>
            <!-- this links against marble -->
            <Path fileType="library">/usr/lib/kde4/plasma_applet_worldclock.so</Path>
            <Path fileType="data">/usr/share/kde4/services/plasma_applet_kworldclock*</Path>
        </Files>
    </Package>

    <Package>
        <Name>kdeedu-devel</Name>
        <Summary>Development files for kdeedu</Summary>
        <RuntimeDependencies>
            <Dependency release="current">kdeedu</Dependency>
            <Dependency release="current">kdeedu-marble</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/share/kde4/apps/cmake</Path>
        </Files>
    </Package>

