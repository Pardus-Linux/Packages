            <Dependency>libxslt-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>kdesdk-4.4.0-lokalize-fix-crash.patch</Patch>
        </Patches>
    </Source>
    <Package>
        <Name>kdesdk</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.0">qt</Dependency>
            <Dependency versionFrom="4.7.0">qt-sql-sqlite</Dependency>
