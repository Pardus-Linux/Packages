            <Dependency>musicbrainz</Dependency>
            <Dependency>tunepimp</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>kdemultimedia4</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
