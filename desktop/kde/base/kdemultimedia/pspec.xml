        <IsA>app:gui</IsA>
        <Summary>KDE4 multimedia applications</Summary>
        <Description>Contains KDE4 multimedia applications. In package dragonplayer (a simple video player), juk (a music manager and player), kmix (an audio mixer) and kscd (an Audio-CD player) applications are included.</Description>
        <Archive type="tarbz2" sha1sum="f92da1414f0ddb0cc193ff49f807992a3634cc9d">mirrors://kde/stable/4.5.1/src/kdemultimedia-4.5.1.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.5.1">kdelibs-devel</Dependency>
            <Dependency versionFrom="4.7.0_beta2">qt-devel</Dependency>
            <Dependency>flac-devel</Dependency>
            <Dependency>ffmpeg-devel</Dependency>
            <Dependency>lame-devel</Dependency>
            <Dependency>phonon-devel</Dependency>
            <Dependency>taglib-devel</Dependency>
            <Dependency>libogg-devel</Dependency>
            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>libvorbis-devel</Dependency>
            <Dependency>cdparanoia-devel</Dependency>
            <Dependency>pulseaudio-libs-devel</Dependency>
            <Dependency>xine-lib-devel</Dependency>
            <Dependency>musicbrainz-devel</Dependency>
            <Dependency>tunepimp-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Partial fix for autostart option of kscd -->
            <Patch>partial-fix-for-start-option.diff</Patch>

            <!-- Show Play Audio CD with KSCD option on top -->
            <Patch>set-kscd-predicate-toplevel.diff</Patch>

            <Patch level="1">kdemultimedia-4.2.85-nomplayerthumbs.patch</Patch>

            <!-- Add Kaction for pavucontrol to KMix -->
            <!-- TODO: Do not show menu item if pavucontrol is not installed, or always show item and install pavucontrol package if it's not found -->
            <Patch level="1">kmix-add-pavucontrol-shortcut.patch</Patch>

            <Patch>mandriva/kdemultimedia-4.3.1-kscd-allow-more-cd.patch</Patch>
            <!--<Patch level="1">mandriva/kmix-pulse.patch</Patch>-->

            <!-- Use kded_kosd for OSD stuff
            <Patch level="1">kmix-kosd-support.patch</Patch>
            -->
        </Patches>
    </Source>
    <Package>
        <Name>kdemultimedia</Name>
        <RuntimeDependencies>
            <!-- For kded_kosd stuff -->
            <Dependency versionFrom="4.5.1">kdebase-workspace</Dependency>
