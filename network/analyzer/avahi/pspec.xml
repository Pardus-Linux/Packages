            <Dependency release="current">avahi</Dependency>
            <Dependency release="current">avahi-libs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/libavahi-glib.*</Path>
            <Path fileType="library">/usr/lib/libavahi-gobject.*</Path>
        </Files>
    </Package>
