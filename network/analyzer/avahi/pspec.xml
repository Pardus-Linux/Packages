            <Path fileType="man">/usr/share/man/man8/avahi-dnsconfd.*</Path>
        </Files>
        <Provides>
            <COMAR script="avahi-dnsconfd-service.py" name="avahi_dnsconfd">System.Service</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>avahi-tools</Name>
