        <BuildDependencies>
            <Dependency>libpcap-devel</Dependency>
            <Dependency>lua-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">nmap-4.75-include.patch</Patch>
            <Patch level="1">nmap-4.75-nolua.patch</Patch>
