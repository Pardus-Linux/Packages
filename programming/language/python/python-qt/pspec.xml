        <IsA>library</IsA>
        <Summary>A set of Python bindings for the Qt 4.x Toolkit</Summary>
        <Description>Qt is a set of C++ libraries and development tools that includes platform independent abstractions for graphical user interfaces, networking, threads, Unicode, regular expressions, SQL databases, SVG, OpenGL, XML, and user and application settings. PyQt implements 440 of these classes as a set of Python modules.</Description>
        <Archive sha1sum="79170b33e3c4ee5716c48e131dafd30147b01c7c" type="targz">http://www.riverbankcomputing.co.uk/static/Downloads/PyQt4/PyQt-x11-gpl-4.7.6.tar.gz</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.7.0_beta2">qt-devel</Dependency>
            <Dependency versionFrom="4.11.1">sip-devel</Dependency>
            <Dependency versionFrom="4.7.0_beta2">qt-webkit</Dependency>
            <Dependency versionFrom="4.4.2">phonon-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>add_gettext_support.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>python-qt-devel</Name>
        <Summary>Development files for python-qt</Summary>
        <RuntimeDependencies>
            <Dependency>qt-devel</Dependency>
            <Dependency release="48">python-qt</Dependency>
            <Dependency release="48">python-qt-webkit</Dependency>
            <Dependency release="48">python-qt-phonon</Dependency>
            <Dependency versionFrom="4.11.1">sip-devel</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package releaseTo="45">PyQt-webkit</Package>
            <Package releaseTo="45">PyQt-phonon</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-devel</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/usr/share/sip</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.0_beta2">qt</Dependency>
            <Dependency versionFrom="4.11">sip</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>PyQt</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/qt4/qsci</Path>
            <Path fileType="library">/usr/lib/qt4/plugins/designer</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-webkit</Name>
        <Summary>Python bindings for QtWebkit library</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="47">python-qt</Dependency>
            <Dependency versionFrom="4.7.0_beta2">qt-webkit</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <!-- PyQt-webkit is a seperate package -->
            <Package releaseTo="42">PyQt</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-webkit</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/*WebKit*</Path>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/uic/widget-plugins/*webkit*</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-phonon</Name>
        <Summary>Python bindings for Phonon multimedia library</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="47">python-qt</Dependency>
            <Dependency versionFrom="4.4.2">phonon</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <!-- PyQt-phonon is a seperate package -->
            <Package releaseTo="42">PyQt</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-phonon</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/*phonon*</Path>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/uic/widget-plugins/*phonon*</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-docs</Name>
        <Summary>Documentation for python-qt bindings</Summary>
        <RuntimeDependencies>
            <Dependency>python-qt</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>PyQt-doc</Package>
            <Package>PyQt-docs</Package>
        </Replaces>
        <Files>
            <Path fileType="doc">/usr/share/doc/*/html</Path>
        </Files>
    </Package>

