            <!-- Do not fail if an unknown connection type is requested -->
            <Patch>workaround-for-unknown-connection-exception.diff</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>python-networkmanager</Name>
        <RuntimeDependencies>
            <Dependency>NetworkManager</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/python*</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/bin</Path>
            <Path fileType="data">/etc/bash_completion.d</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/bin/network">network</AdditionalFile>
        </AdditionalFiles>
    </Package>

