        <License>LGPLv2.1</License>
        <License>GPLv2</License>
        <IsA>library</IsA>
        <Summary>Gnome structured file library</Summary>
        <Description>The libgsf is a library for reading and writing structured files (eg MS OLE and Zip).</Description>
        <Archive sha1sum="813f039274a08104da2eabb3074f59d254e96bed" type="tarbz2">mirrors://gnome/libgsf/1.14/libgsf-1.14.15.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>gnome-vfs</Dependency>
            <Dependency>libbonobo</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">fix-underlinking.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>libgsf</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="header">/usr/include/libgsf-1/gsf</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
    </Package>

    <Package>
        <Name>libgsf-gnome</Name>
        <Summary>Gnome support for libgsf</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="7">libgsf</Dependency>
            <Dependency>gnome-vfs</Dependency>
            <Dependency>libbonobo</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin/gsf-office-thumbnailer</Path>
            <Path fileType="header">/usr/include/libgsf-1/gsf-gnome</Path>
            <Path fileType="library">/usr/lib/libgsf-gnome*</Path>
            <Path fileType="library">/usr/lib/python*/site-packages/gsf/gnome*</Path>
            <Path fileType="data">/usr/lib/pkgconfig/libgsf-gnome*</Path>
            <Path fileType="man">/usr/share/man/man1/gst-office-thumbnailer*</Path>
        </Files>
    </Package>

    <Package>
        <Name>libgsf-docs</Name>
        <Summary>Libgsf reference documents</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="7">libgsf</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
    </Package>

