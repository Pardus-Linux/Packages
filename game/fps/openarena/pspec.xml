    <Package>
        <Name>openarena</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="1.2.13">libsdl</Dependency>
            <Dependency versionFrom="1.7.411">openal</Dependency>
            <Dependency versionFrom="1.1.0">freealut</Dependency>
            <Dependency versionFrom="1.2.3">libvorbis</Dependency>
