        <License>GPLv2</License>
        <IsA>library</IsA>
        <IsA>app:console</IsA>
        <Summary>Kipi (KDE Image Plugin Interface) plugins for KDE4</Summary>
        <Description>kipi-plugins contains Kipi plugins for KDE graphics applications like digiKam and gwenview.</Description>
        <Archive sha1sum="047b7d70bb0b6f8afc916857db61ab51a466aaa4" type="tarbz2">mirrors://sourceforge/kipi/kipi-plugins-1.5.0.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>gdk-pixbuf-devel</Dependency> <!-- Unfortunately, ipodexport plugin uses gdk-pixbuf -->
            <Dependency versionFrom="4.5.3">kdepimlibs-devel</Dependency>
            <Dependency versionFrom="4.5.3">kdelibs-devel</Dependency>
            <!-- For libkdcraw and libkexiv2 >= 1.1.0 -->
            <Dependency versionFrom="4.5.3">kdegraphics-devel</Dependency>
            <Dependency versionFrom="4.7.1">qt-devel</Dependency>
            <Dependency>libXrandr-devel</Dependency>
            <Dependency>libgpod-devel</Dependency>
            <Dependency>phonon-devel</Dependency>
            <Dependency versionFrom="2.1.0">opencv-devel</Dependency>
            <Dependency>mesa-devel</Dependency>
            <Dependency>qca2-devel</Dependency>
            <Dependency>jpeg-devel</Dependency>
            <Dependency>tiff-devel</Dependency>
            <Dependency>libxslt-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">find-new-gdkpixbuf.diff</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>kipi-plugins</Name>
        <RuntimeDependencies>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency versionFrom="4.5.3">kdegraphics</Dependency>
            <Dependency versionFrom="4.5.3">kdepimlibs</Dependency>
            <Dependency versionFrom="4.5.3">kdelibs</Dependency>
            <Dependency versionFrom="4.7.1">qt</Dependency>
            <Dependency>libXrandr</Dependency>
            <Dependency>libgpod</Dependency>
            <Dependency>libgomp</Dependency>
            <Dependency>enblend</Dependency>
            <Dependency versionFrom="2.1.0">opencv</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>hugin</Dependency>
            <Dependency>mesa</Dependency>
            <Dependency>qca2</Dependency>
            <Dependency>jpeg</Dependency>
            <Dependency>tiff</Dependency>
            <Dependency>libxslt</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>libkipi</Package>
            <Package>libkexif</Package>
            <Package>kipi-plugins-kde4</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/kde/4/lib</Path>
            <Path fileType="executable">/usr/kde/4/bin</Path>
            <Path fileType="data">/usr/kde/4/share</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

