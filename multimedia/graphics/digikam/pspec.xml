        <License>GPLv2</License>
        <Icon>digikam</Icon>
        <IsA>app:gui</IsA>
        <Summary>A digital photo management application for KDE4</Summary>
        <Description>digikam is an advanced digital photo management application for KDE4, which makes importing and organizing digital photos a "snap". The photos can be organized in albums which can be sorted chronologically, by directory layout or by custom collections.</Description>
        <Archive sha1sum="7daf9606468e5a9ada55fac3a68820703adac48e" type="tarbz2">mirrors://sourceforge/digikam/digikam-1.6.0.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.5.3">kdepimlibs-devel</Dependency>
            <Dependency versionFrom="4.5.3">kdebase-runtime</Dependency> <!-- Trash protocol -->
            <Dependency versionFrom="4.5.3">kdeedu-devel</Dependency> <!-- marble devel files are needed -->
            <Dependency versionFrom="4.5.3">kdelibs-devel</Dependency>
            <Dependency versionFrom="4.7.1">qt-devel</Dependency>
            <Dependency versionFrom="4.5.3">kdegraphics-devel</Dependency>
            <Dependency>libgphoto2-devel</Dependency>
            <Dependency>qt-sql-sqlite</Dependency>
            <Dependency>lensfun-devel</Dependency>
            <Dependency>soprano-devel</Dependency>
            <Dependency>phonon-devel</Dependency>
            <Dependency>liblqr-devel</Dependency>
            <Dependency>jasper-devel</Dependency>
            <Dependency>tiff-devel</Dependency>
            <Dependency>jpeg-devel</Dependency>
            <Dependency>lcms-devel</Dependency>
            <Dependency>mysql-server</Dependency> <!-- digikam looks for mysqld and mysql_install_db -->
        </BuildDependencies>
        <Patches>
            <Patch level="1">digikam-1.4.0_marble_plugin_rpath.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>digikam</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.5.3">kdegraphics</Dependency>
            <Dependency versionFrom="4.5.3">kdebase-runtime</Dependency>
            <Dependency versionFrom="4.5.3">kdeedu-marble</Dependency>
            <Dependency versionFrom="4.5.3">kdelibs</Dependency>
            <Dependency versionFrom="4.5.3">kdepimlibs</Dependency>
            <Dependency versionFrom="4.7.1">qt-sql-sqlite</Dependency> <!-- digikam uses mysqld by default but also works with sqlite -->
            <Dependency versionFrom="4.7.1">qt</Dependency>
            <Dependency versionFrom="1.6.0">kipi-plugins</Dependency>
            <Dependency>libgphoto2</Dependency>
            <Dependency>lensfun</Dependency>
            <Dependency>soprano</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>liblqr</Dependency>
            <Dependency>jasper</Dependency>
            <Dependency>tiff</Dependency>
            <Dependency>jpeg</Dependency>
            <Dependency>lcms</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>digikam-kde4</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <!-- Disable 2009 splashes for now
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/kde4/apps/digikam/data/splash-digikam.png">splash-digikam.png</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/kde4/apps/showfoto/data/splash-showfoto.png">splash-showfoto.png</AdditionalFile>
        </AdditionalFiles>
        -->
    </Package>

    <Package>
        <Name>digikam-devel</Name>
        <Summary>Development files for digikam</Summary>
        <RuntimeDependencies>
            <Dependency release="current">digikam</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
        </Files>
    </Package>

