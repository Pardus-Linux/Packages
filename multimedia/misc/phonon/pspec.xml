        <License>LGPLv2.1</License>
        <IsA>library</IsA>
        <Summary>Cross platform multimedia API for KDE4</Summary>
        <Description>Phonon was created as a solution to several problems with multimedia commonly faced by Unix desktops, especially KDE 3's outdated multimedia framework aRts. Phonon itself is not a multimedia framework, but interfaces with existing frameworks such as GStreamer or Xine via backends.</Description>
        <Archive sha1sum="c329d924fb75a89a9de8a4d799ff4dcd7ee3302e" type="tarbz2">mirrors://kde/stable/phonon/4.4.2/phonon-4.4.2.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency versionFrom="4.7.0_beta2">qt-devel</Dependency>
            <Dependency>automoc4</Dependency>
            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>gst-plugins-base-devel</Dependency>
            <Dependency>pulseaudio-libs-devel</Dependency>
            <Dependency>gstreamer-devel</Dependency>
            <Dependency>xine-lib-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <!-- Use Mandriva patches and backports -->
            <Patch level="1">mandriva/phonon-4.3.50-phonon-allow-stop-empty-source.patch</Patch>
            <Patch level="1">mandriva/phonon-4.3.50-gstreamer-fix-seekable-query-failed.patch</Patch>

            <!--<Patch level="1">do-not-compile-backends.diff</Patch>-->
        </Patches>
    </Source>

    <Package>
        <Name>phonon</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.0_beta2">qt</Dependency>
            <Dependency>pulseaudio-libs</Dependency>
            <Dependency>alsa-lib</Dependency>
        </RuntimeDependencies>
        <!-- oxygen icons conflict -->
        <Conflicts>
            <Package versionTo="4.1.3">kdebase4-runtime</Package>
        </Conflicts>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="data">/usr/share</Path>
        </Files>
    </Package>

    <Package>
        <Name>phonon-backend-xine</Name>
        <RuntimeDependencies>
            <Dependency>phonon</Dependency>
            <Dependency>xine-lib</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>phonon-xine</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/qt4/plugins/phonon_backend/*xine*</Path>
            <Path fileType="library">/usr/lib/kde4/plugins/phonon_backend/*xine*</Path>
            <Path fileType="data">/usr/share/icons/oxygen/*/*/*xine*</Path>
            <Path fileType="data">/usr/share/kde4/services/phononbackends/xine.desktop</Path>
        </Files>
    </Package>

    <Package>
        <Name>phonon-backend-gstreamer</Name>
        <RuntimeDependencies>
            <Dependency>phonon</Dependency>
            <Dependency>qt</Dependency>
            <Dependency>mesa</Dependency>
            <Dependency>gstreamer</Dependency>
            <Dependency>gst-plugins-base</Dependency>
            <Dependency>gst-plugins-good</Dependency>
            <Dependency>gst-ffmpeg</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>phonon-gstreamer</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/qt4/plugins/phonon_backend/*gstreamer*</Path>
            <Path fileType="data">/usr/share/kde4/services/phononbackends/gstreamer.desktop</Path>
            <Path fileType="library">/usr/lib/kde4/plugins/phonon_backend/*gstreamer*</Path>
            <Path fileType="data">/usr/share/icons/hicolor/*/*/*gstreamer*</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/share/icons/hicolor/scalable/apps/phonon-gstreamer.svg">phonon-gstreamer.svg</AdditionalFile>
        </AdditionalFiles>
    </Package>

    <Package>
        <Name>phonon-devel</Name>
        <Summary>Development files for phonon</Summary>
        <RuntimeDependencies>
            <Dependency release="current">phonon</Dependency>
            <Dependency versionFrom="4.7.0_beta2">qt-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <Path fileType="header">/usr/include</Path>
        </Files>
    </Package>

