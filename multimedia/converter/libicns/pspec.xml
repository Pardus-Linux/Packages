        </Patches>
    </Source>

    <Package>
        <Name>libicns</Name>
        <RuntimeDependencies>
            <Dependency>jasper</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>icns2png</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc/libicns</Path>
        </Files>
    </Package>

    <Package>
        <Name>libicns-devel</Name>
        <Summary>Development files for libicns</Summary>
        <RuntimeDependencies>
            <Dependency release="current">libicns</Dependency>
        </RuntimeDependencies>
        <Replaces>
           <Package>icns2png-devel</Package>
        </Replaces>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig/libicns.pc</Path>
        </Files>
    </Package>

