            <Dependency versionFrom="4.6.2">qt-devel</Dependency>
            <Dependency>ruby</Dependency>
            <Dependency>libsamplerate-devel</Dependency>
            <Dependency>fftw3-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">liblastfm-sort.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>liblastfm</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.6.2">qt</Dependency>
            <Dependency>ruby</Dependency>
            <Dependency>libsamplerate</Dependency>
            <Dependency>fftw3</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/liblastfm.so*</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>liblastfm-devel</Name>
        <Summary>A collection of libraries to help you integrate Last.fm services</Summary>
        <RuntimeDependencies>
            <Dependency release="5">liblastfm</Dependency>
            <Dependency release="5">liblastfm_fingerprint</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
        </Files>
    </Package>

    <Package>
        <Name>liblastfm_fingerprint</Name>
        <Summary>A collection of libraries to help you integrate Last.fm services</Summary>
        <RuntimeDependencies>
            <Dependency release="5">liblastfm</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib/liblastfm_fingerprint*</Path>
        </Files>
    </Package>

