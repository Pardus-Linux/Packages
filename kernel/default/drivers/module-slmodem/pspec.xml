        <ExcludeArch>x86_64</ExcludeArch> 
        <License>Smart-Link</License>
        <IsA>driver</IsA>
        <Summary>Driver for Smart Link modem</Summary>
        <Description>module-slmodem is the driver of Smart Link Modem for Linux. It provides full-featured 56K Voice Fax Modem.</Description>
        <Archive sha1sum="d4879e205b775972c00be11b6344712f9942055f" type="targz">http://linmodems.technion.ac.il/packages/smartlink/slmodem-2.9.11-20100718.tar.gz</Archive>
        <BuildDependencies>
            <Dependency release="147">kernel-module-headers</Dependency>
            <Dependency>alsa-lib</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">slmodem-2.9.11-modem-makefile.patch</Patch>
            <Patch level="1">ioctl_hookstate.patch</Patch>
            <Patch level="1">slmodem-motorola-id.patch</Patch>
            <Patch level="1">2.6.36.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>module-slmodem</Name>
        <RuntimeDependencies>
            <Dependency release="147">kernel</Dependency>
            <Dependency>module-ungrab-winmodem</Dependency>
            <Dependency>module-slmodem-userspace</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>slmodem</Package>
        </Replaces>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
        </Files>
    </Package>

    <Package>
        <Name>module-slmodem-userspace</Name>
        <RuntimeDependencies>
            <Dependency>alsa-lib</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>slmodem</Package>
        </Replaces>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="data">/lib/udev/rules.d</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="library">/var/lib/slmodem</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/lib/udev/rules.d/55-slmodem.rules">slmodem.udev</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/conf.d/slmodem">slmodem.conf.d</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/modprobe.d/slmodem.conf">slmodem.modprobe.d</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/modprobe.d/slamr.conf">slamr.modprobe.d</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
            <COMAR script="service.py">System.Service</COMAR>
        </Provides>
    </Package>

